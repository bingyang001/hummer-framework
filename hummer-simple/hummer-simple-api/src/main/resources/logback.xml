    <logger name="stash" level="DEBUG" additivity="false">
        <appender-ref ref="stash-file"/>
    </logger>
    <logger name="org.springframework" level="INFO" dditivity="false"/>
    <logger name="org.apache.kafka.*" level="trace" dditivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="com.hummer.*" level="debug" dditivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="stash-file"/>
